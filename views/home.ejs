<style>
    /* Full-page background gradient with dynamic effect */
    body {
        margin: 0;
        padding: 0;
        overflow: hidden;
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100vh;
        font-family: Arial, sans-serif;
        transition: background 0.3s;
        background: linear-gradient(135deg, #2d004d, #3e0066, #5a189a, #6a0dad, #8a2be2); /* Darker violet gradient colors */
    }

    .center-div {
        background-color: rgba(255, 255, 255, 0.85);
        padding: 1rem;
        width: 25rem;
        height: 10rem;
        text-align: center;
        border-radius: 10px;
        backdrop-filter: blur(5px);
        transition: transform 0.3s ease;
    }

    .center-div:hover {
        transform: scale(1.05); /* Slight scaling on hover */
    }

    .headline {
        font-size: 2.5rem;
        font-weight: bold;
        color: #fd05b3;
        margin-bottom: 0.5rem;
    }

    .quote {
        font-size: 0.9rem;
        text-align: center;
        color: #000;
        margin-bottom: 1rem;
    }

    .btn-container {
        display: flex;
        gap: 1rem;
        justify-content: center;
    }

    .btn {
        padding: 0.3rem 0.7rem;
        background-color: #333;
        color: #fff;
        border: none;
        cursor: pointer;
        border-radius: 5px;
        transition: background-color 0.3s;
    }

    .btn:hover {
        background-color: #555;
    }

    /* Starry sky animation */
    .star {
        position: absolute;
        width: 2px;
        height: 2px;
        background: white;
        border-radius: 50%;
        box-shadow: 0px 0px 5px 2px white;
        animation: twinkle 2s infinite ease-in-out;
    }

    /* Shooting star animation */
    .shooting-star {
        position: absolute;
        width: 2px;
        height: 2px;
        background: white;
        border-radius: 50%;
        box-shadow: 0px 0px 10px 3px white;
        animation: shoot 3s ease-in-out infinite;
    }

    /* Twinkling star effect */
    @keyframes twinkle {
        0%, 100% { opacity: 0.5; }
        50% { opacity: 1; }
    }

    /* Shooting star effect */
    @keyframes shoot {
        0% {
            transform: translateX(0) translateY(0);
            opacity: 1;
        }
        50% {
            transform: translateX(-300px) translateY(300px);
            opacity: 0.7;
        }
        100% {
            opacity: 0;
            transform: translateX(-500px) translateY(500px);
        }
    }
</style>

<body>
    <div class="center-div">
        <h1 class="headline">HOME</h1>
        <p class="quote">"SECURE USER AUTHENTICATION"</p>
        <div class="btn-container">
            <button class="btn" onclick="window.location.href='/login'">Login</button>
            <button class="btn" onclick="window.location.href='/signin'">Signup</button>
        </div>
    </div>

    <!-- Star Elements for Animation -->
    <div id="stars"></div>

    <script>
        // Dynamic background color change based on mouse movement
        document.addEventListener('mousemove', (event) => {
            const { clientX, clientY } = event;
            const width = window.innerWidth;
            const height = window.innerHeight;

            // Calculate gradient based on cursor position
            const xPercent = clientX / width;
            const yPercent = clientY / height;

            document.body.style.background = `linear-gradient(135deg,
                rgb(${Math.floor(45 + xPercent * 50)}, 0, ${Math.floor(77 + yPercent * 100)}),
                rgb(${Math.floor(62 + xPercent * 50)}, 0, ${Math.floor(102 + yPercent * 100)}),
                rgb(${Math.floor(90 + xPercent * 50)}, 24, 160),
                rgb(${Math.floor(106 + xPercent * 30)}, 13, 173),
                rgb(${Math.floor(138 + xPercent * 20)}, 43, 226)
            )`;
        });

        // Add stars to the background
        function createStars() {
            const starsContainer = document.getElementById("stars");
            for (let i = 0; i < 100; i++) {  // 100 stars
                const star = document.createElement("div");
                star.classList.add("star");
                star.style.top = `${Math.random() * 100}vh`;
                star.style.left = `${Math.random() * 100}vw`;
                star.style.animationDuration = `${Math.random() * 2 + 1}s`; // Random twinkle duration
                starsContainer.appendChild(star);
            }
        }

        // Add shooting stars
        function createShootingStars() {
            for (let i = 0; i < 10; i++) {  // 10 shooting stars
                const shootingStar = document.createElement("div");
                shootingStar.classList.add("shooting-star");
                shootingStar.style.top = `${Math.random() * 100}vh`;
                shootingStar.style.left = `${Math.random() * 100}vw`;
                shootingStar.style.animationDelay = `${Math.random() * 3}s`;
                document.body.appendChild(shootingStar);
            }
        }

        createStars();
        createShootingStars();
    </script>
</body>
