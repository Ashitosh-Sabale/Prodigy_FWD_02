<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Employee Management System</title>
    <style>
        /* General Styling */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Poppins', sans-serif;
        }

        body {
            height: 100vh;
            display: flex;
            flex-direction: column;
            color: #333;
        }

        /* Navbar Styling */
        .navbar {
            background: #6a0dad;
            padding: 1rem;
            color: white;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .navbar a {
            color: white;
            margin: 0 1rem;
            text-decoration: none;
            font-size: 1rem;
            transition: color 0.3s;
        }

        .navbar a:hover {
            color: #b084f7;
        }

        .navbar input[type="text"] {
            padding: 0.4rem;
            border: none;
            border-radius: 5px;
            outline: none;
            width: 200px;
        }

        /* Main Container */
        .container {
            background: #f4f4f9;
            padding: 2rem;
            margin: 1rem auto;
            width: 30rem;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

        .container h2 {
            color: #6a0dad;
            font-size: 1.8rem;
            margin-bottom: 1rem;
            text-align: center;
        }

        .form-group {
            margin-bottom: 1rem;
        }

        .form-group label {
            display: block;
            font-size: 0.9rem;
            color: #333;
            margin-bottom: 0.5rem;
        }

        .form-group input {
            width: 100%;
            padding: 0.5rem;
            border: 1px solid #ddd;
            border-radius: 5px;
            font-size: 0.9rem;
        }

        .btn {
            background: #6a0dad;
            color: #fff;
            padding: 0.5rem 1rem;
            border: none;
            cursor: pointer;
            border-radius: 5px;
            font-size: 0.9rem;
            transition: background 0.3s;
        }

        .btn:hover {
            background: #5a189a;
        }

        /* Employee List Styling */
        .employee-list {
            margin-top: 1.5rem;
            padding: 1rem;
            background: #f9f9ff;
            border-radius: 10px;
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }

        .employee-item {
            background: #f4f4f9;
            padding: 1rem;
            border-radius: 5px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .employee-item h4 {
            color: #6a0dad;
            font-size: 1.1rem;
        }

        .actions button {
            margin-right: 0.3rem;
            padding: 0.3rem 0.6rem;
            border: none;
            cursor: pointer;
            color: white;
            font-size: 0.8rem;
            border-radius: 3px;
        }

        .actions .update-btn {
            background: #1db954;
        }

        .actions .delete-btn {
            background: #ff4c4c;
        }

        /* Footer Styling */
        footer {
            background: #6a0dad;
            color: white;
            padding: 1rem;
            text-align: center;
            font-size: 0.8rem;
            margin-top: auto;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <div class="navbar">
        <div>
            <a href="#" onclick="showSection('add')">Add</a>
            <a href="#" onclick="showSection('view')">View</a>
        </div>
        <input type="text" id="searchBar" placeholder="Search by Employee Name" onkeyup="searchEmployee()">
    </div>

    <!-- Main Container -->
    <div class="container" id="addSection">
        <h2>Add Employee</h2>
        <div class="form-group">
            <label>Employee Name</label>
            <input type="text" id="empName">
        </div>
        <div class="form-group">
            <label>Employee ID</label>
            <input type="text" id="empID">
        </div>
        <div class="form-group">
            <label>Role</label>
            <input type="text" id="empRole">
        </div>
        <div class="form-group">
            <label>Date of Joining</label>
            <input type="date" id="empDOJ">
        </div>
        <div class="form-group">
            <label>Date of Birth</label>
            <input type="date" id="empDOB">
        </div>
        <div class="form-group">
            <label>Blood Group</label>
            <input type="text" id="empBloodGroup">
        </div>
        <div class="form-group">
            <label>Profile Photo</label>
            <input type="file" id="empPhoto">
        </div>
        <button class="btn" onclick="addOrUpdateEmployee()">Add Employee</button>
    </div>

    <div class="container" id="viewSection" style="display: none;">
        <h2>Employee Records</h2>
        <div class="employee-list" id="employeeList"></div>
    </div>

    <!-- Footer -->
    <footer>
        Employee Management System Â© 2024
    </footer>

    <script>
        let employees = [];
        let editIndex = -1;

        function addOrUpdateEmployee() {
            const name = document.getElementById('empName').value;
            const id = document.getElementById('empID').value;
            const role = document.getElementById('empRole').value;
            const doj = document.getElementById('empDOJ').value;
            const dob = document.getElementById('empDOB').value;
            const bloodGroup = document.getElementById('empBloodGroup').value;
            const photo = document.getElementById('empPhoto').files[0] ? URL.createObjectURL(document.getElementById('empPhoto').files[0]) : '';

            if (editIndex === -1) {
                employees.push({ name, id, role, doj, dob, bloodGroup, photo });
            } else {
                employees[editIndex] = { name, id, role, doj, dob, bloodGroup, photo };
                editIndex = -1;
            }
            displayEmployees();
            resetForm();
        }

        function displayEmployees() {
            const employeeList = document.getElementById('employeeList');
            employeeList.innerHTML = '';
            employees.forEach((emp, index) => {
                employeeList.innerHTML += `
                    <div class="employee-item">
                        <div>
                            <h4>${emp.name}</h4>
                            <p>ID: ${emp.id} | Role: ${emp.role} | Joined: ${emp.doj} | DOB: ${emp.dob} | Blood Group: ${emp.bloodGroup}</p>
                            ${emp.photo ? `<img src="${emp.photo}" alt="Profile Photo" style="width: 50px; height: 50px; border-radius: 50%;">` : ''}
                        </div>
                        <div class="actions">
                            <button class="update-btn" onclick="editEmployee(${index})">Update</button>
                            <button class="delete-btn" onclick="deleteEmployee(${index})">Delete</button>
                        </div>
                    </div>
                `;
            });
        }

        function showSection(section) {
            document.getElementById('addSection').style.display = section === 'add' ? 'block' : 'none';
            document.getElementById('viewSection').style.display = section === 'view' ? 'block' : 'none';
        }

        function editEmployee(index) {
            const emp = employees[index];
            document.getElementById('empName').value = emp.name;
            document.getElementById('empID').value = emp.id;
            document.getElementById('empRole').value = emp.role;
            document.getElementById('empDOJ').value = emp.doj;
            document.getElementById('empDOB').value = emp.dob;
            document.getElementById('empBloodGroup').value = emp.bloodGroup;
            editIndex = index;
            showSection('add');
        }

        function deleteEmployee(index) {
            employees.splice(index, 1);
            displayEmployees();
        }

        function resetForm() {
            document.getElementById('empName').value = '';
            document.getElementById('empID').value = '';
            document.getElementById('empRole').value = '';
            document.getElementById('empDOJ').value = '';
            document.getElementById('empDOB').value = '';
            document.getElementById('empBloodGroup').value = '';
            document.getElementById('empPhoto').value = '';
        }

        function searchEmployee() {
            const query = document.getElementById('searchBar').value.toLowerCase();
            const filteredEmployees = employees.filter(emp => emp.name.toLowerCase().includes(query));
            const employeeList = document.getElementById('employeeList');
            employeeList.innerHTML = '';
            filteredEmployees.forEach((emp, index) => {
                employeeList.innerHTML += `
                    <div class="employee-item">
                        <div>
                            <h4>${emp.name}</h4>
                            <p>ID: ${emp.id} | Role: ${emp.role} | Joined: ${emp.doj} | DOB: ${emp.dob} | Blood Group: ${emp.bloodGroup}</p>
                            ${emp.photo ? `<img src="${emp.photo}" alt="Profile Photo" style="width: 50px; height: 50px; border-radius: 50%;">` : ''}
                        </div>
                        <div class="actions">
                            <button class="update-btn" onclick="editEmployee(${index})">Update</button>
                            <button class="delete-btn" onclick="deleteEmployee(${index})">Delete</button>
                        </div>
                    </div>
                `;
            });
        }
    </script>
</body>
</html>
